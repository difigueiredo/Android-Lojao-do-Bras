<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


         <FrameLayout
             android:layout_width="match_parent"
             android:layout_height="?attr/actionBarSize"
             android:id="@+id/frameLayout">

             <android.support.v7.widget.Toolbar
                 xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:app="http://schemas.android.com/apk/res-auto"
                 android:layout_width="match_parent"
                 android:layout_height="?attr/actionBarSize"
                 android:background="#d31627" />

             <LinearLayout
                 android:id="@+id/activity_friends_blockeds_button_back"
                 android:layout_width="46dp"
                 android:layout_height="?attr/actionBarSize"
                 android:layout_gravity="left|center_vertical"
                 android:orientation="horizontal">

                 <ImageView
                     android:layout_width="26dp"
                     android:layout_height="26dp"
                     android:layout_marginLeft="10dp"
                     android:layout_gravity="center"
                     android:id="@+id/toolbar_icon"/>

             </LinearLayout>



             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="?attr/actionBarSize"
                 android:orientation="vertical"
                 android:layout_gravity="center_horizontal|center_vertical">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:gravity="center_horizontal|center_vertical"
                     android:textSize="20dp"/>
             </LinearLayout>


             <LinearLayout
                 android:id="@+id/activity_friends_blockeds_button_config"
                 android:layout_width="46dp"
                 android:layout_height="?attr/actionBarSize"
                 android:layout_gravity="right"
                 android:layout_marginRight="8dp"
                 android:orientation="horizontal">

                 <ImageView
                     android:layout_width="20dp"
                     android:layout_height="20dp"
                     android:layout_gravity="center"
                     android:layout_marginLeft="13dp"/>

             </LinearLayout>

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="22dp"
                 android:id="@+id/imageView6"
                 android:layout_gravity="left|center_vertical"
                 android:src="@drawable/ic_drawer"
                 android:layout_marginLeft="6dp" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Sobre nós"
                 android:id="@+id/textView6"
                 android:layout_gravity="center"
                 android:layout_marginRight="60dp"
                 android:textColor="#ffffff"
                 android:textSize="28dp" />

         </FrameLayout>






         <ImageView
             android:layout_width="125dp"
             android:layout_height="45dp"
             android:id="@+id/imageView7"
             android:src="@drawable/ic_logo_welcome"
             android:layout_below="@+id/frameLayout"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="30dp" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Seja bem vindo ao Lojão do Brás"
             android:id="@+id/textView7"
             android:layout_below="@+id/imageView7"
             android:textSize="36dp"
             android:layout_marginLeft="50dp"
             android:layout_marginRight="50dp"
             android:layout_marginTop="12dp"
             android:layout_centerHorizontal="true"
             android:gravity="center"
             android:textColor="#c1212c" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Nossa missão é oferecer uma experiência acompanhada de um ambiente de loja diferenciado e de um mix de produtos alinhados com a moda e de excelente custo-benefício"
             android:id="@+id/textView8"
             android:layout_below="@+id/textView7"
             android:layout_centerHorizontal="true"
             android:layout_marginLeft="35dp"
             android:layout_marginRight="35dp"
             android:gravity="center"
             android:layout_marginTop="8dp"
             android:textSize="16dp"
             android:textColor="#2c2c2c" />


         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="60dp"
             android:background="#d31627"
             android:layout_below="@+id/textView8"
             android:layout_centerHorizontal="true"
             android:layout_marginLeft="16dp"
             android:layout_marginRight="16dp"
             android:layout_marginTop="16dp"
             android:id="@+id/relativeLayout">


             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="ENCONTRE NOSSAS LOJAS"
                 android:id="@+id/textView2"
                 android:layout_centerVertical="true"
                 android:layout_centerHorizontal="true"
                 android:textSize="18dp"
                 android:autoText="false"
                 android:textColor="#ffffff"
                 android:textStyle="bold" />
         </RelativeLayout>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Acompanhe nossas redes sociais"
             android:id="@+id/textView9"
             android:layout_below="@+id/relativeLayout"
             android:layout_centerHorizontal="true"
             android:textColor="#2c2c2c"
             android:textSize="16dp"
             android:layout_marginTop="16dp" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/textView10"
             android:layout_below="@+id/textView9"
             android:layout_centerHorizontal="true" />

         <ImageView
             android:layout_width="60dp"
             android:layout_height="60dp"
             android:id="@+id/imageView8"
             android:layout_below="@+id/textView9"
             android:layout_alignRight="@+id/textView10"
             android:layout_alignEnd="@+id/textView10"
             android:src="@drawable/ic_welcome_instagram"
             android:layout_marginTop="16dp"
             android:layout_marginRight="13dp" />

         <ImageView
             android:layout_width="60dp"
             android:layout_height="60dp"
             android:id="@+id/imageView9"
             android:layout_alignTop="@+id/imageView8"
             android:layout_toLeftOf="@+id/imageView8"
             android:layout_toStartOf="@+id/imageView8"
             android:src="@drawable/ic_welcome_facebook"
             android:layout_marginRight="26dp" />

         <ImageView
             android:layout_width="60dp"
             android:layout_height="60dp"
             android:id="@+id/imageView10"
             android:layout_alignTop="@+id/imageView8"
             android:layout_toRightOf="@+id/textView10"
             android:layout_toEndOf="@+id/textView10"
             android:src="@drawable/ic_welcome_twitter"
             android:layout_marginLeft="13dp" />

         <ImageView
             android:layout_width="60dp"
             android:layout_height="60dp"
             android:id="@+id/imageView11"
             android:layout_alignTop="@+id/imageView10"
             android:layout_toRightOf="@+id/imageView10"
             android:layout_toEndOf="@+id/imageView10"
             android:src="@drawable/ic_welcome_googlem"
             android:layout_marginLeft="26dp" />




        <android.support.v4.widget.DrawerLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/drawer_layout"
            android:layout_width="400dp"
            android:layout_height="500dp"           >
            <FrameLayout
                android:id="@+id/content_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ListView android:id="@+id/left_drawer"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:choiceMode="singleChoice"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:background="#111"/>
        </android.support.v4.widget.DrawerLayout>
     </RelativeLayout>


     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Aceitamos as seguintes formas de pagamentos"
             android:id="@+id/textView11"
             android:textSize="14dp"
             android:textColor="#2c2c2c"
             android:layout_alignParentTop="true"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="20dp" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:id="@+id/textView12"
             android:layout_below="@+id/textView11"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="20dp" />

         <ImageView
             android:layout_width="50dp"
             android:layout_height="35dp"
             android:id="@+id/imageView12"
             android:layout_alignTop="@+id/textView12"
             android:layout_toLeftOf="@+id/textView12"
             android:layout_toStartOf="@+id/textView12"
             android:src="@drawable/ic_welcome_card_aura"
             android:layout_marginRight="5dp" />

         <ImageView
             android:layout_width="50dp"
             android:layout_height="35dp"
             android:id="@+id/imageView13"
             android:layout_alignTop="@+id/imageView12"
             android:layout_toLeftOf="@+id/imageView12"
             android:layout_toStartOf="@+id/imageView12"
             android:src="@drawable/ic_welcome_card_visaelectron"
             android:layout_marginRight="10dp" />

         <ImageView
             android:layout_width="50dp"
             android:layout_height="35dp"
             android:id="@+id/imageView14"
             android:layout_alignTop="@+id/imageView13"
             android:layout_toLeftOf="@+id/imageView13"
             android:layout_toStartOf="@+id/imageView13"
             android:src="@drawable/ic_welcome_card_american"
             android:layout_marginRight="10dp" />

         <ImageView
             android:layout_width="50dp"
             android:layout_height="35dp"
             android:id="@+id/imageView15"
             android:layout_alignTop="@+id/textView12"
             android:layout_toRightOf="@+id/imageView12"
             android:layout_toEndOf="@+id/imageView12"
             android:src="@drawable/ic_welcome_card_cabal"
             android:layout_marginLeft="5dp" />

         <ImageView
             android:layout_width="50dp"
             android:layout_height="35dp"
             android:id="@+id/imageView16"
             android:layout_alignTop="@+id/imageView15"
             android:layout_toRightOf="@+id/imageView15"
             android:layout_toEndOf="@+id/imageView15"
             android:src="@drawable/ic_welcome_card_diners"
             android:layout_marginLeft="10dp" />

         <ImageView
             android:layout_width="50dp"
             android:layout_height="35dp"
             android:id="@+id/imageView17"
             android:layout_alignTop="@+id/imageView16"
             android:layout_toRightOf="@+id/imageView16"
             android:layout_toEndOf="@+id/imageView16"
             android:src="@drawable/ic_welcome_card_elo"
             android:layout_marginLeft="10dp" />

         <ImageView
             android:layout_width="50dp"
             android:layout_height="35dp"
             android:id="@+id/imageView18"
             android:src="@drawable/ic_welcome_card_redeshopdebito"
             android:layout_below="@+id/imageView12"
             android:layout_alignRight="@+id/textView12"
             android:layout_alignEnd="@+id/textView12"
             android:layout_marginRight="5dp"
             android:layout_marginTop="8dp" />

         <ImageView
             android:layout_width="50dp"
             android:layout_height="35dp"
             android:id="@+id/imageView19"
             android:layout_alignTop="@+id/imageView18"
             android:layout_toLeftOf="@+id/imageView18"
             android:layout_toStartOf="@+id/imageView18"
             android:src="@drawable/ic_welcome_card_visa"
             android:layout_marginRight="10dp" />

         <ImageView
             android:layout_width="50dp"
             android:layout_height="35dp"
             android:id="@+id/imageView20"
             android:layout_alignTop="@+id/imageView19"
             android:layout_toLeftOf="@+id/imageView19"
             android:layout_toStartOf="@+id/imageView19"
             android:src="@drawable/ic_welcome_card_sorocred"
             android:layout_marginRight="10dp" />

         <ImageView
             android:layout_width="50dp"
             android:layout_height="35dp"
             android:id="@+id/imageView21"
             android:src="@drawable/ic_welcome_card_redeshop"
             android:layout_alignTop="@+id/imageView18"
             android:layout_alignLeft="@+id/textView12"
             android:layout_alignStart="@+id/textView12"
             android:layout_marginLeft="5dp" />

         <ImageView
             android:layout_width="50dp"
             android:layout_height="35dp"
             android:id="@+id/imageView22"
             android:layout_alignTop="@+id/imageView21"
             android:layout_toRightOf="@+id/imageView21"
             android:layout_toEndOf="@+id/imageView21"
             android:src="@drawable/ic_welcome_card_sollo"
             android:layout_marginLeft="10dp" />

         <ImageView
             android:layout_width="50dp"
             android:layout_height="35dp"
             android:id="@+id/imageView23"
             android:layout_alignTop="@+id/imageView22"
             android:layout_toRightOf="@+id/imageView22"
             android:layout_toEndOf="@+id/imageView22"
             android:src="@drawable/ic_welcome_card_mastercard"
             android:layout_marginLeft="10dp" />

         <ImageView
             android:layout_width="50dp"
             android:layout_height="35dp"
             android:id="@+id/imageView24"
             android:layout_below="@+id/imageView18"
             android:layout_toLeftOf="@+id/textView12"
             android:layout_toStartOf="@+id/textView12"
             android:src="@drawable/ic_welcome_card_maestro"
             android:layout_marginRight="5dp"
             android:layout_marginTop="8dp" />

         <ImageView
             android:layout_width="50dp"
             android:layout_height="35dp"
             android:id="@+id/imageView25"
             android:layout_alignTop="@+id/imageView24"
             android:layout_toLeftOf="@+id/imageView24"
             android:layout_toStartOf="@+id/imageView24"
             android:src="@drawable/ic_welcome_card_lojao"
             android:layout_marginRight="10dp" />

         <ImageView
             android:layout_width="50dp"
             android:layout_height="35dp"
             android:id="@+id/imageView26"
             android:layout_alignTop="@+id/imageView24"
             android:layout_toRightOf="@+id/textView12"
             android:layout_toEndOf="@+id/textView12"
             android:src="@drawable/ic_welcome_card_mais"
             android:layout_marginLeft="5dp" />

         <ImageView
             android:layout_width="50dp"
             android:layout_height="35dp"
             android:id="@+id/imageView27"
             android:layout_alignTop="@+id/imageView26"
             android:layout_toRightOf="@+id/imageView26"
             android:layout_toEndOf="@+id/imageView26"
             android:src="@drawable/ic_welcome_card_hiper"
             android:layout_marginLeft="10dp" />

     </RelativeLayout>
        </LinearLayout>
    </ScrollView>
 </LinearLayout>